<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F6F5"
    android:orientation="vertical"
    tools:context="com.example.foton.MarketActivity" >

    <include layout="@layout/actionbar" />

    <cn.com.foton.View.ImageCycleView
        android:id="@+id/f1_viewapger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </cn.com.foton.View.ImageCycleView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/imagweather"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/tianqi" />

        <TextView
            android:id="@+id/CustomerNamewait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imagweather"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imagweather"
            android:text="2°~16°" />

        <TextView
            android:id="@+id/CustomerSexwait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/CustomerNamewait"
            android:layout_below="@+id/CustomerNamewait"
            android:text="晴转多云 | 星期四  04/07" />
    </RelativeLayout>

    <GridView
        android:id="@+id/gridView1"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="2dp"
        android:horizontalSpacing="1dp"
        android:numColumns="4"
        android:padding="2dp"
        android:verticalSpacing="1dp" >
    </GridView>

</LinearLayout>