<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
     android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:background="@drawable/fxk"
            android:button="@null"
         	 />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/futianqiche" />

        <Button
            android:id="@+id/chuiban"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:visibility="invisible"
            android:background="@drawable/cuiban"
            android:text="催办"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="12sp" />
    </LinearLayout>
<LinearLayout 
    android:layout_weight="2.5"
    android:layout_marginTop="10dp"
    android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/CustomerNamewait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="#5b41f0"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/CustomerSexwait"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="男" />

        <TextView
            android:id="@+id/CustomerMobilewait"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="13252521422" />
        <TextView
            android:layout_marginLeft="5dp"
        android:id="@+id/textView8"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="等级:" />   
        
         <TextView
        android:id="@+id/CustomerLevelwait"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView4"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市:" />

        <TextView
            android:id="@+id/fcmProvinceCodewait"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海" />
    </LinearLayout>
    <LinearLayout 
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >
         
            
              <TextView
        android:id="@+id/textView10"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来源:" />

  

    

    <TextView
        android:id="@+id/fcmInfoWaywait"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="外部来源" />


        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_marginTop="7dp"
               android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        
        >
        
     
    
    <TextView
        android:id="@+id/CustomerCreateDatewait"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-03-29  16:59" />
     <TextView
        android:id="@+id/textView6"
        android:layout_marginLeft="7dp"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="意向车型:" />
            <TextView
        android:id="@+id/ModelSerieswait"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赛瓦纳" />
        
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/Linear"
        android:layout_marginTop="3dp"
               android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        
        >
        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已分配至：" />
    <TextView
        android:id="@+id/fcmCustomerSaleManId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已分配" />
    </LinearLayout>
    
</LinearLayout>


 

   

    <ImageButton
         android:focusable="false"
        android:layout_weight="0.4"
        android:id="@+id/imageButton1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
           android:layout_gravity="center"
        android:src="@drawable/go" />

   

</LinearLayout>